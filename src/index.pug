extends _layout.pug

block title
  | #{site.title} - Get Stoned

block content
  section#index-hero.hero.parallax.video
    // (data-src='https://www.youtube.com/embed/WeYsTmIzjkw')
    .foreground.product(data-ratio='-60')
      img.animated.fadeInUp(src='img/index-hero.png')
    // .call-to-action.watch.button
      // a.play(href='#')
      // h3 WATCH&nbsp;VIDEO
    .content
      h1 Gems for your ears
      p 25% #[strong OFF] with #[strong FREE] shipping in the US for a limited time
      br
      a.pre-order-button.button(href='#')
        h3 BUY NOW
      .share-coupon-button.modal-open.button(data-modal-selector='.share-coupon-modal')
        h3 SAVE $15

    // a#scroll-down.button.summary-down.next-section(href='#')
    //   img(src='img/down-icon.svg')
    // .video-modal.modal.hidden
    //   iframe(width='100%', height='100%', src='', frameborder='0', allowfullscreen)
    //   .modal-close.modal-close-position
    //     | &#10005;

    .share-coupon-modal.modal.hidden.scrolling-modal
      .modal-close
        h1 &#10005;

      .share-coupon.animated.fadeInUp
        .share-coupon-image(data-lazy='/img/onpage-coupon.jpeg')
        .share-coupon-text
          h2 Tell your friends to get Stoned
          p.
            Share why you are getting Stoned today and receive a <strong> $15
            coupon </strong> for your next pair of Stoned Earphones.
          .share-coupon-buttons
            a.share-coupon-button-for.facebook(href=social.facebook.shareLink, target='_blank')
              i.fa.fa-facebook
              span Share on Facebook
            a.share-coupon-button-for.twitter(href=social.twitter.shareLink, target='_blank')
              i.fa.fa-twitter
              span Share on Twitter
            a.share-coupon-button-for.googleplus(href=social.googlePlus.shareLink, target='_blank')
              i.fa.fa-google-plus
              span Share on Google+
            a.share-coupon-button-for.pinterest(href=social.pinterest.shareLink, target='_blank')
              i.fa.fa-pinterest-p
              span Share on Pinterest
        .share-coupon-text.finished
          h2 Thanks for doing that!
          p.
            Use the coupon
            <strong> STONEDFRIENDS </strong>
            to save
            <strong> $15 </strong>
            on your next pair of Stoned Earphones.
          .pre-order-button.button
            h3 GET STONED

  include _progress.pug

  section.press-strip(data-skip='true')
    .content
      div(style='background-image: url(img/press-strip/kcstar.png)')
      div(style='background-image: url(img/press-strip/abc.png)')
      div(style='background-image: url(img/press-strip/cbs.png)')
      div(style='background-image: url(img/press-strip/fox.png); height: 50px; margin-top: 35px;')
      div(style='background-image: url(img/press-strip/nbc.png); height: 56px; margin-top: 32px;')
      div(style='background-image: url(img/press-strip/yahoofinance.png)')

  section#earphones.list.right
    h2 INTRODUCING
    .image(data-lazy='img/charging-case2.png')
    .info
      h1 Stoned Earbuds
      p
        | Huge sound, noise isolation, in-ear mic, charging case, intuitive controls and zero wires.
      ul
        li
          div
            img(data-lazy='img/icons/microphone-light.svg')
          div HD MICROPHONE
        li
          div
            img(data-lazy='img/icons/range2-light.svg')
          div 10 METER RANGE
        li
          div
            img(data-lazy='img/icons/freq-light.svg')
          div 20-20,000&nbsp;HZ FREQUENCY
        li
          div
            img(data-lazy='img/icons/bluetooth-light.svg')
          div BLUETOOTH 4.2

      a.pre-order-button.button(href='#')
        h3 BUY NOW
      a.discover-stoned.button(href='/tech')
        h3 DISCOVER

  section#refer
    .content
      // h1 Get the latest news.
      // p Sign up for our newsletter to stay up to date.

      h1 Tell your friends, get a pair free
      p
        | Get a free pair of
        strong.emphasis &nbsp;Stoned Earphones&nbsp;
        | by referring your friends.  If 10 of them purchase a pair
        | using your unique link, we send you a free pair.  You also get other great rewards along the way.

      a(href='signup').button.claim-link-button
        | CLAIM YOUR LINK

  section#shirts
    .shirt
      .text
        h1 Men's T-shirt
        // p Add words, zach
        product(id='shirt-men', name="Men's Stoned Shirt", size='m', color='black', hide-name='true')
      .image.animated.fadeInUp
        .bounded-image(data-lazy='img/products/shirt-men-black.png')
    .shirt
      .image.animated.fadeInUp
        .bounded-image(data-lazy='img/products/shirt-women-white.png')
      .text
        h1 Women's T-shirt
        // p Add more words, zach
        product(id='shirt-women', name="Women's Stoned Shirt", size='m', color='white', hide-name='true')

