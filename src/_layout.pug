  body(style='overflow:hidden')
    // Header
    input#open.menu-open(type='checkbox')
    header
      nav
        // ul
        //   li
        //     a(href='#') Product
        //   li
        //     a(href='#') Our Story
        //   li
        //     a(href='#') User Stories
        //   li
        //     a(href='#') Specs
        // |
        a#home(href='/')
          img.logo(src='./img/logo.png', alt=site.name)
        a#preorder.button.pre-order-button(href='#cta')
          | GET STONED
        label.menu-button(for='open')
          | &#8801;

    menu
      ul
        li
          a(href='/') HOME
        li
          a(href='faq') FAQ
        li
          a(href='press') PRESS
        li
          a(href='referral') REFERRAL PROGRAM
        li
          a(href='returns') RETURNS & WARRANTY
        li
          a(href='contact') CONTACT US
        li
          a(href='privacy') PRIVACY
        li
          a(href='terms') TERMS
        li
          hr
        li
          a(href='login') ACCOUNT
        block account-menu-side
        li.logo
          a(href='/')
            img(src='./img/diamond-logo.svg')
        li
          label.menu-close(for='open')
            | &#10005;

    main
      block content

    block signup
      section#getnews(data-lazy='img/lovethemlow.jpg')
        .content
          // h1 Get the latest news.
          // p Sign up for our newsletter to stay up to date.

          h1 Stay Stoned
          p
            | Stay in the loop with the latest updates, discounts and
            exclusive offers.

          form#call-to-action
            script(src='//api.crowdstart.com/mailinglist/zAuKWJGhqreW1/js')
            input(id='email', name='email', placeholder='YOUR E-MAIL')
            button(type='submit') SIGN&nbsp;UP
            .error

    footer
      nav
        ul
          li
            a#social-facebook(href='https://www.facebook.com/StonedHQ', target='_blank')
              i.fa.fa-facebook-square
          li
            a#social-twitter(href='https://twitter.com/StonedHQ', target='_blank')
              i.fa.fa-twitter
          li
            a#social-instagram(href='http://instagram.com/StonedHQ/', target='_blank')
              i.fa.fa-instagram
      nav
        ul
          // li
          //   a(href='about') ABOUT
          // li
          //   a(href='press') PRESS
          // li
          //   a(href='faq') FAQ
          li
            a(href='/') HOME
          li
            a(href='faq') FAQ
          li
            a(href='press') PRESS
          li
            a(href='referral') REFERRAL PROGRAM
          li
            a(href='returns') RETURNS & WARRANTY
          li
            a(href='contact') CONTACT US
          li
            a(href='privacy') PRIVACY
          li
            a(href='terms') TERMS
      a(href='#')
        img.logo(src='./img/logo.png', alt=site.name)
      small.copyright= site.copyright
    // .loader

    include _checkout.pug

