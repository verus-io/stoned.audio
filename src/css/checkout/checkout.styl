            background-color: #3DF2B6

            .step-circle
              background-color: #FFF
              color: #3DF2B6

      .parts
        transform: translateX(-1/3 * 100%)

        .part
          &:first-child
          &:nth-child(n+3)
            height: 1px

            & > *
              display: none

          &:nth-child(2)
            height: auto

            & > *
              display: block

      button[type=submit]
        span:first-child
          display: none
        span:last-child
          display: block

    &.step-3
