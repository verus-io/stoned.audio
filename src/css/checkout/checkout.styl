        background-color: #3DF2B6

        li
          &:nth-child(n+2)
            color: #FFF
            background-color: #3DF2B6

            .step-circle
              background-color: #FFF
              color: #3DF2B6

      .continue-shopping
        display: none

      .parts
        transform: translateX(-2/3 * 100%)

        .part
          &:nth-child(n+1)
            height: 1px

            & > *
              display: none

          &:nth-child(3)
            height: auto

            & > *
              display: block

      button[type=submit]
      .error
      .legal
