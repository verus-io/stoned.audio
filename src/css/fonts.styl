h1, h2, h3
  font-family: 'Lato', sans-serif
  letter-spacing: .1rem

h1
  font-size: 2.75rem
  font-weight: 700

h2
  font-size: 1rem
  font-weight: 700

h3
  font-size: .8rem

body
  font-family: 'Helvetica', 'Arial', sans-serif
  font-weight: 100

+below(500px)
  h1
    font-size: 1.5rem
    font-weight: 700

  h2
    font-size: 1rem
    font-weight: 700

  h3
    font-size: .4rem

  body
    font-size: 0.8em
