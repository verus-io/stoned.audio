.hero
  height: calc(121vh + 40px)
  overflow: hidden
  padding: 0

  .summary-down
    margin-top: -5px
    bottom: auto
    top: 90vh

    img
      animation: 2s ease 0s bob
      animation-iteration-count: infinite
      animation-delay: 2s
      margin-top: 10px

      &:hover
        animation-iteration-count: 1

    &:after
      content: none

  &.parallax
    .foreground
      background-size: cover
      background-repeat: no-repeat

      .animated
        animation-duration: 1.5s
        width: 100%
        height: 100%
        background-size: cover
        background-repeat: no-repeat
        background-position: 50% 50%

  .watch
    position: absolute
    top: 75vh
    left: 50vw
    transform: translate(-50%,-50%)
    padding-right: 40px
    padding-left: 80px

    .play
      display: block
      position: absolute
      top: 50%
      left: 48px
      margin-top: -20px
      width: 40px
      height: 40px
      border-radius: 40px
      padding: 0
      background-color: rgba(0,0,0,.2)
      border: 0

      &:before
        content: ''
        display: block
        position: absolute
        top: 11px
        left: 11px
        width: 0
        height: 18px
        border-left: 1px solid #fff

      &:after
        content: ''
        display: block
        position: absolute
        -webkit-transform: rotate(45deg) skew(-20deg, -20deg)
        transform: rotate(45deg) skew(-20deg, -20deg)
        top: 10px
        left: 2px
        width: 20px
        height: 20px
        border-top: 10px solid #fff
        border-right: 10px solid #fff
        border-bottom: 10px solid transparent
        border-left: 10px solid transparent

  .content
    margin-top: 55vh
    transform: translateY(-50%)

  +below(400px)
    height: 110vh

    .content.content
      margin-top: 45vh

    .summary-down.summary-down
      top: 70vh

    .call-to-action
      top: 60vh

    .watch
      padding-left: 60px
      padding-right: 20px

      .play
        width: 32px
        height: 32px
        border-radius: 32px
        margin-top: -16px
        left: 42px

        &:before
          content: ''
          display: block
          position: absolute
          top: 7px
          left: 8px
          width: 0
          height: 18px
          border-left: 1px solid #fff

        &:after
          top: 6px
          left: -2px

.progress
  margin-top: calc(-20vh - 40px)
  margin-bottom: 20vh
  z-index: 10

  .bar
    background-color: rgba(51,51,51,.9)
    height: 40px
    transition: top .1s linear
    top: 0

    &:before
      // background: radial-gradient(at top left, rgba(242, 36, 105,.50), rgba(242,36,105,0))
      // background-color: #F170CD
      // background-color: #F170A7
      background: radial-gradient(at top left, rgba(0, 212, 255,.50), rgba(0,212,255,0))
      background-color: #3DF2B6
      text-align: right
      font-size: 0.8rem
      font-weight: bold
      line-height: 3.2em
      padding-right: 20px
      width: 10%

    &:after
      content: ''
      background-color: #3DF2B6
      // background-color: #F170CD
      // background-color: #F170A7
      position: absolute
      margin-left: -13px
      width: 28px
      height: 28px
      top: 6px
      transform: rotate(45deg)
      left: 10%

  +below(800px)
    .bar
      &:before
        width: 20%

      &:after
        left: 20%
        content: none

  +below(400px)
    margin-top: 0
    margin-bottom: 0

    .bar
      top: 0 !important

