@keyframes ripple-white
  0%
    box-shadow: 0 0 0 0 rgba(255,255,255, 0.4)
  80%
    box-shadow: 0 0 0 20px rgba(255,255,255, 0.0)
  100%
    box-shadow: 0 0 0 0 rgba(255,255,255, 0)

@keyframes ripple-black
  0%
    box-shadow: 0 0 0 0 rgba(0,0,0, 0.4)
  80%
    box-shadow: 0 0 0 20px rgba(0,0,0, 0.0)
  100%
    box-shadow: 0 0 0 0 rgba(0,0,0, 0)

@keyframes ripple-green
  0%
    box-shadow: 0 0 0 0 rgba(61,242,182, 0.4)
  80%
    box-shadow: 0 0 0 20px rgba(61,242,182, 0.0)
  100%
    box-shadow: 0 0 0 0 rgba(61,242,182, 0)

