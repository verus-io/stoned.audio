  .watch
    position: absolute
    top: 75vh
    left: 50vw
    transform: translate(-50%,-50%)
    padding-right: 40px
    // padding-left: 80px
    padding-left: 40px

    .play
      display: block
      position: absolute
      top: 50%
      left: 48px
      margin-top: -20px
      width: 40px
      height: 40px
      border-radius: 40px
      padding: 0
      background-color: rgba(0,0,0,.2)
      border: 0

      &:before
        content: ''
        display: block
        position: absolute
        top: 11px
        left: 11px
        width: 0
        height: 18px
        border-left: 1px solid #fff

      &:after
        content: ''
        display: block
        position: absolute
        -webkit-transform: rotate(45deg) skew(-20deg, -20deg)
        transform: rotate(45deg) skew(-20deg, -20deg)
        top: 10px
        left: 2px
        width: 20px
        height: 20px
        border-top: 10px solid #fff
        border-right: 10px solid #fff
        border-bottom: 10px solid transparent
        border-left: 10px solid transparent

  .content
